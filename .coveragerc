[run]
# Coverage configuration for ReconPoint
source = web
omit =
    */migrations/*
    */tests.py
    */test_*.py
    */conftest.py
    */__pycache__/*
    */site-packages/*
    */venv/*
    */virtualenv/*
    */.venv/*
    */manage.py

[report]
exclude_lines =
    pragma: no cover
    def __repr__
    raise AssertionError
    raise NotImplementedError
    if __name__ == .__main__.:
    if TYPE_CHECKING:
    @abstractmethod
    @abc.abstractmethod
    class .*\(Protocol\):
    if settings.DEBUG:
    if not settings.DEBUG:
    if settings.TESTING:
    logger\.
    raise Debug
    except ImportError:
    except ModuleNotFoundError:

precision = 2
skip_covered = False
show_missing = True

# Ignore errors in coverage measurement
ignore_errors = True

[html]
directory = htmlcov

[xml]
output = coverage.xml
